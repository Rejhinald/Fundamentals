# Route to create a movie via POST request
POST    /movies/createMovie                      MoviesController.CreateMovie

# Route to movie list
GET     /movies                                  MoviesController.GetMovies

# Route to get movie
GET     /movies/:id                              MoviesController.GetMovie

# Basic GET route for home or other actions
GET     /                                       App.Index

# Route to serve static files
GET     /public/*filepath                        Static.Serve("public")

